        // Name will be used as suffix for rendered screenshots
        "iPhone 5.8 inch": {
            "screenshots": "folder/path/with/subfolders",
            "pathToTemplateFile": "path/to/template/file.png",
            "screenshotCoordinates": {
                "bottomLeft": {
                    "x": 100,
                    "y": 343.21
                },
                "bottomRight": {
                    "x": 100,
                    "y": 343.21
                },
                "topLeft": {
                    "x": 100,
                    "y": 600.123
                },
                "topRight": {
                    "x": 200,
                    "y": 390.37
                }
            },
            // no need for identifiers as we can just match line
            // to array index
            "textBounds": [
                {
                    "bottomLeft": {
                        "x": 200,
                        "y": 300
                    },
                    "topRight": {
                        "x": 200,
